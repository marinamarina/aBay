<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
		<servlet-name>ItemService</servlet-name>
		<servlet-class>itemServlet.ItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ItemService</servlet-name>
		<url-pattern>/item/*</url-pattern>
	</servlet-mapping>
	 <servlet>
		<servlet-name>BidService</servlet-name>
		<servlet-class>bidServlet.BidServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BidService</servlet-name>
		<url-pattern>/bid/*</url-pattern>
	</servlet-mapping>
  
  <!-- Default page to serve -->
 <welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
